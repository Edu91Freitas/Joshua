<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Text" />

    <style name="Text.Body">
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="Text.Body.Light">
        <item name="android:textColor">@color/text_light_primary</item>
    </style>

    <style name="Text.Caption">
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>
</resources>
